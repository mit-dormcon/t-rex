{
  "devDependencies": {
    "prettier": "^3.6.0",
    "prettier-plugin-jinja-template": "^2.1.0"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-jinja-template"
    ],
    "overrides": [
      {
        "files": [
          "templates/*.html"
        ],
        "options": {
          "parser": "jinja-template"
        }
      }
    ],
    "proseWrap": "always"
  }
}
